{
  "compilerOptions": {
    "alwaysStrict": false,
    "declaration": true,
    "declarationDir": "dist/@types",
    "declarationMap": true,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "outDir": "dist",
    "sourceMap": true,
    "strict": false,
    "target": "esnext"
  },
  "include": ["src"]
}
